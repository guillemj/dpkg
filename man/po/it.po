#: dpkg-parsechangelog.pod
msgid "B<--format> I<output-format>"
msgstr "B<--format> I<formato-di-output>"

#. type: textblock
#: dpkg-parsechangelog.pod
#, fuzzy
#| msgid ""
#| "Set the output format. Currently supported values are I<dpkg> and "
