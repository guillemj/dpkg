#!/bin/sh

set -e

if [ "$(id -u)" = '0' ]; then
  # Skip, we cannot declare we do not want root.
  exit 77
fi

srcdir="$(pwd)"

cd "$AUTOPKGTEST_TMP"
"$srcdir/configure" \
  --disable-nls \
  --disable-dselect \
  --prefix=/usr \
  --libexecdir='${exec_prefix}/lib' \
  --sysconfdir=/etc \
  --localstatedir=/var \
  # EOL
make installcheck TEST_VERBOSE=1
